<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment4"
        tools:ignore="ExtraText"
        android:background="@color/instaAccent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/container7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_corner_snap"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="PrivateResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin2"
                    android:background="@drawable/btn_corner5"
                    android:padding="16dp"/>
                <EditText
                    android:id="@+id/edit_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin2"
                    android:background="@drawable/btn_corner5"
                    android:hint="First Name"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/edit_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin2"
                    android:background="@drawable/btn_corner5"
                    android:hint="Last Name"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin2"
                    android:background="@drawable/btn_corner5"
                    android:hint="Phone"
                    android:padding="16dp" />


                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin2"
                    android:background="@drawable/btn_corner5"
                    android:hint="City"
                    android:padding="16dp" />



                <Button
                    android:id="@+id/butondate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:backgroundTint="@color/instaAccent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Add info"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/backdrop_tool"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/instaAccent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="Account information"
                app:titleTextColor="@android:color/white" />
        </com.google.android.material.appbar.AppBarLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>